---
import Layout from "../layouts/Layout.astro";

const title = "404 Not Found | fpl0";
const description = "The page you are looking for isn't here.";
---

<Layout title={title} description={description}>
  <main class="not-found-container">
    <h1 class="logo">404<span class="cursor">_</span></h1>
    <p class="error-message">
      Use the cursor to navigate back to the known universe.
    </p>

    <div class="action-area">
      <a href="/" class="back-link"> Return Home </a>
    </div>
  </main>
</Layout>

<style>
  .not-found-container {
    padding-top: 8rem;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
  }

  .logo {
    font-family: var(--font-mono-brand);
    font-size: 2.2rem;
    font-weight: 400;
    margin: 0 0 1.5rem 0;
    line-height: var(--line-height-tight);
    letter-spacing: -0.04em;
    color: var(--color-text);
    /* Prevent layout shift during font loading */
    display: flex;
    align-items: baseline;
  }

  .cursor {
    display: inline-block;
    color: var(--color-primary);
    margin-left: 0.05em;
    animation: blink 1s step-end infinite;
    /* Fixed width prevents shift when font loads */
    width: 0.6em;
    text-align: center;
  }

  @keyframes blink {
    0%,
    100% {
      opacity: 1;
    }
    50% {
      opacity: 0;
    }
  }

  .error-message {
    font-family: var(--font-serif);
    font-size: var(--font-size-lead);
    color: var(--color-text-secondary);
    line-height: var(--line-height-relaxed);
    margin-bottom: 3rem;
    font-style: italic;
    max-width: 40ch;
  }

  /* Match the .back-link style from global.css */
  .back-link {
    font-family: var(--font-mono-brand);
    font-size: var(--font-size-sm);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
</style>
