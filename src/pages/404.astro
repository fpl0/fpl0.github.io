---
import Logo from "../components/Logo.astro";
import Layout from "../layouts/Layout.astro";

const title = "404 Not Found | fpl0";
const description = "The page you are looking for isn't here.";
---

<Layout title={title} description={description}>
  <main id="main-content" class="not-found-container">
    <Logo text="404" class="logo-404" />
    <p class="error-message">
      Use the cursor to navigate back to the known universe.
    </p>

    <div class="action-area">
      <a href="/" class="back-link"> Return Home </a>
    </div>
  </main>
</Layout>

<style>
  .not-found-container {
    padding-top: 8rem;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
  }

  :global(.logo-404) {
    margin-bottom: 1.5rem;
  }

  .error-message {
    font-family: var(--font-serif);
    font-size: var(--font-size-lead);
    color: var(--color-text-secondary);
    line-height: var(--line-height-relaxed);
    margin-bottom: 3rem;
    font-style: italic;
    max-width: 40ch;
  }

</style>
