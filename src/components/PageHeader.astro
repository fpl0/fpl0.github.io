---
interface Props {
  backLink?: string;
  backText?: string;
}

const { backLink = "/", backText = "← home" } = Astro.props;
---

<header class="page-header-nav">
  <nav>
    <a href={backLink} class="back-link">{backText}</a>
    <button
      class="page-search-btn"
      id="page-search-btn"
      type="button"
      aria-label="Search posts, Cmd+K"
      aria-controls="search-backdrop"
    >
      <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <circle cx="11" cy="11" r="8"></circle>
        <path d="m21 21-4.35-4.35"></path>
      </svg>
      <kbd>⌘K</kbd>
    </button>
  </nav>
</header>

<style>
  .page-header-nav nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .page-search-btn {
    display: flex;
    align-items: center;
    gap: 0.4rem;
    background: transparent;
    border: none;
    padding: 0;
    font-family: var(--font-mono-brand);
    font-size: var(--font-size-xxs);
    letter-spacing: 0.04em;
    color: var(--color-muted);
    cursor: pointer;
    transition: color 0.2s ease;
  }

  .page-search-btn:hover {
    color: var(--color-primary);
  }

  .page-search-btn kbd {
    font-family: var(--font-mono);
    font-size: var(--font-size-label);
    padding: 0.1rem 0.35rem;
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: 4px;
    color: var(--color-muted);
  }
</style>

<script>
  import { openSearch } from "../utils/search-trigger";

  function initPageSearchBtn(): void {
    const btn = document.getElementById("page-search-btn");
    btn?.addEventListener("click", () => openSearch());
  }

  document.addEventListener("astro:page-load", initPageSearchBtn);
</script>
