---
import Caption from "./Caption.astro";

interface Props {
  src: string;
  alt: string;
  width: number;
  height: number;
  label?: string;
  caption?: string;
}

const { src, alt, width, height, label, caption } = Astro.props;
---

<figure>
  <img src={src} alt={alt} width={width} height={height} />
  <Caption label={label} caption={caption} />
</figure>
