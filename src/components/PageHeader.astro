---
/**
 * PageHeader - Site-wide navigation bar
 *
 * Provides consistent navigation across all pages:
 * - Brand mark (fpl0_) linking home
 * - Section links: about / tags
 * - Search trigger (Cmd+K)
 *
 * Used by every page in the blog Layout. Replaces the old
 * back-link-only header with full cross-section navigation.
 */

import Logo from "./Logo.astro";

const pathname = Astro.url.pathname;
const isAbout = pathname === "/about" || pathname === "/about/";
const isTags = pathname.startsWith("/tags");
---

<header class="site-header">
  <div class="site-header-bar">
    <a href="/" class="site-header-brand" data-astro-prefetch="hover">
      <Logo text="fpl0" as="span" />
    </a>
    <nav class="site-nav" aria-label="Main navigation">
      <a href="/about" aria-current={isAbout ? "page" : undefined}>about</a>
      <span class="site-nav-sep">/</span>
      <a href="/tags/" aria-current={isTags ? "page" : undefined}>tags</a>
      <span class="site-nav-sep">/</span>
      <button
        class="site-nav-search"
        id="site-nav-search"
        type="button"
        aria-label="Search"
        aria-controls="search-backdrop"
      >
        <svg class="site-nav-search-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
          <circle cx="11" cy="11" r="8"></circle>
          <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
        </svg>
        <span class="site-nav-search-text">search</span>
        <kbd class="site-nav-search-kbd">⌘K</kbd>
      </button>
    </nav>
  </div>
</header>

<style>
  .site-header {
    margin-bottom: var(--space-8);
  }

  .site-header-bar {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
  }

  /* Brand mark — Logo rendered inside a link */
  .site-header-brand {
    text-decoration: none;
    color: var(--color-text);
    transition: color var(--duration-normal) var(--ease-out);
  }

  .site-header-brand:hover {
    color: var(--color-primary);
    text-decoration: none;
    background: none;
  }

  /* Override Logo h1 sizing for the nav bar context */
  .site-header-brand :global(.logo) {
    font-size: var(--font-size-h3);
    margin: 0;
  }

  /* --- Navigation links --- */

  .site-nav {
    display: flex;
    gap: var(--space-3);
    align-items: center;
    font-family: var(--font-mono-brand);
    font-size: var(--font-size-xxs);
    letter-spacing: var(--letter-spacing-loose);
    color: var(--color-muted);
  }

  .site-nav a {
    color: var(--color-muted);
    text-decoration: none;
    transition: color var(--duration-normal) var(--ease-out);
  }

  .site-nav a:hover {
    color: var(--color-primary);
    text-decoration: underline;
    text-underline-offset: var(--space-0-75);
  }

  .site-nav a[aria-current="page"] {
    color: var(--color-text);
    text-decoration: underline;
    text-decoration-color: var(--color-primary);
    text-underline-offset: var(--space-0-75);
    text-decoration-thickness: var(--space-0-375);
  }

  .site-nav-sep {
    color: var(--color-border);
  }

  /* --- Search button --- */

  .site-nav-search {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    background: transparent;
    border: none;
    padding: 0;
    font-family: var(--font-mono-brand);
    font-size: var(--font-size-xxs);
    letter-spacing: var(--letter-spacing-loose);
    color: var(--color-muted);
    cursor: pointer;
    transition: color var(--duration-normal) var(--ease-out);
  }

  .site-nav-search:hover {
    color: var(--color-primary);
  }

  .site-nav-search-icon {
    display: none;
    width: var(--space-4);
    height: var(--space-4);
  }

  .site-nav-search-kbd {
    font-family: var(--font-mono);
    font-size: var(--font-size-label);
    padding: var(--space-1) var(--space-2);
    background: var(--color-surface);
    border: var(--space-px) solid var(--color-border);
    border-radius: var(--radius-sm);
    color: var(--color-muted);
  }

  /* --- Mobile --- */

  @media (max-width: 600px) {
    .site-nav-search-text,
    .site-nav-search-kbd {
      display: none;
    }

    .site-nav-search-icon {
      display: block;
    }
  }

</style>

<script>
  import { onPageReady } from "../utils/lifecycle";
  import { openSearch } from "../utils/search-trigger";

  onPageReady((signal) => {
    const btn = document.getElementById("site-nav-search");
    btn?.addEventListener("click", () => openSearch(), { signal });
  });
</script>
