---
interface Props {
  src: string;
  alt: string;
  width?: number;
  height?: number;
  label?: string;
  caption?: string;
}

const { src, alt, width, height, label, caption } = Astro.props;
---

<figure>
  <img src={src} alt={alt} width={width} height={height} loading="lazy" />
  {
    caption && (
      <figcaption>
        {label && <strong>{label}</strong>}
        <span set:html={caption} />
      </figcaption>
    )
  }
</figure>
